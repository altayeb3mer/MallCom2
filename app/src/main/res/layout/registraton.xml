<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Login"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/lay1"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_normal_size"
                android:layout_marginRight="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_extra_large_size"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="تسجيل حساب" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@android:color/white"
                    android:text="يرجى اكمال اجراءات التسجيل " />

            </LinearLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@+id/lay1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_margin="@dimen/margin_normal_size"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/lay1"
                app:layout_constraintBottom_toTopOf="@+id/lay2"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="المعلومات الشخصية" />

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:gravity="right"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/phone"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="رقم الهاتف" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/firstName"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="الاسم الاول" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/secondName"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="الاسم الثاني" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/thirdName"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="الاسم الثالث" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="تاريخ الميلاد" />

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textDirection="rtl"
                            android:id="@+id/birth"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                             android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="اضغط لاختيار التاريخ.." />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_normal_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="النوع" />

                <RadioGroup
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:id="@+id/radioGroupType"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioBtnType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ذكر"
                        android:textSize="@dimen/txt_normal_size"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                    <RadioButton
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:layout_marginRight="@dimen/margin_normal_size"
                        android:id="@+id/radioBtnType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="انثى"
                        android:textSize="@dimen/txt_normal_size"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </RadioGroup>
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="معلومات السكن" />

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_toStartOf="@+id/ic_arrow_down"
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="right"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_toLeftOf="@+id/ic_arrow_down" />

                        <ImageView
                            android:id="@+id/ic_arrow_down"
                            android:layout_alignParentEnd="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_down"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_toStartOf="@+id/ic_arrow_down2"
                            android:id="@+id/gender"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_toLeftOf="@+id/ic_arrow_down2" />

                        <ImageView
                            android:id="@+id/ic_arrow_down2"
                            android:layout_alignParentEnd="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_down"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    app:cardBackgroundColor="@color/cardBg">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:inputType="text"
                            android:maxLines="1"
                            android:lines="1"
                            android:id="@+id/region"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="المنطقة"
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnregestration"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تسجيل" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/progressLay"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">
            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>