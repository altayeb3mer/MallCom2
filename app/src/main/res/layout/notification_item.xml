<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/margin_normal_size"
    android:id="@+id/container"
    android:layout_margin="@dimen/margin_small_size">

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_box1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اليوم"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_small_size"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apr 23, 2021"
                android:textSize="@dimen/txt_normal_size"
                android:textStyle="bold"></TextView>
        </LinearLayout>
      <LinearLayout
     android:layout_marginTop="6dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="الإدارة"
                  android:gravity="center"
                  android:background="@color/colorPrimaryDark"
                  android:textColor="@color/white"
                  android:textSize="@dimen/txt_normal_size"
                  android:textStyle="bold"></TextView>
              <TextView
                  android:layout_alignParentLeft="true"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="10:30 PM"
                  android:gravity="center"
                  android:textColor="@color/grayColor"
                  android:textSize="@dimen/txt_normal_size"
                  android:textStyle="bold"></TextView>
          </RelativeLayout>

          <TextView
              android:layout_gravity="center"
              android:background="@drawable/roundbox"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="100dp"
              android:text="يوجد تخفيض 50% على الملابس الرجالية والاطفالية"
              android:textColor="@color/colorPrimaryDark"
              android:textSize="@dimen/txt_normal_size"
              android:textStyle="bold"></TextView>
     </LinearLayout>
    </LinearLayout>


</LinearLayout>