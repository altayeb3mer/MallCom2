<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/margin_normal_size"
    android:id="@+id/container">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/hhhhh"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="تي شيرت رجالي"
                android:textSize="@dimen/txt_normal_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:textColor="@android:color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_small_size">
            <TextView
                android:background="@color/new_price_bg"
                android:padding="@dimen/margin_small_size"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="70 % خصم"
                android:textSize="@dimen/txt_small_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:textColor="@android:color/black"/>
            <TextView
                android:background="@color/new_price_bg"
                android:padding="@dimen/margin_small_size"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="300 SDG"
                android:textSize="@dimen/txt_small_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@color/new_price_bg"
        android:padding="@dimen/margin_small_size"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="اضافة الى العربة"
        android:textSize="@dimen/txt_small_size"
        android:layout_marginTop="@dimen/margin_small_size"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true" />

</RelativeLayout>