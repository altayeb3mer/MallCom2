<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/margin_normal_size"
    android:id="@+id/container"
    android:layout_margin="@dimen/margin_small_size">

    <TextView
        android:id="@+id/datef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Apr 23, 2021"
        android:textColor="@color/grayColor"
        android:textSize="@dimen/txt_normal_size" />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_box1"
               >
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="@dimen/margin_normal_size">

                <ImageView
                    android:id="@+id/itemimgf"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/honor" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemnamef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هاتف هواوي Y7"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_small_size"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/itempricef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="55.000 جنيه سوداني"
                android:textColor="#67a0c4"
                android:textSize="@dimen/txt_small_size"></TextView>

            <TextView
                android:id="@+id/itemratef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_box1"
                android:drawableLeft="@drawable/ic_star_24"
                android:text="4.5"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_small_size"></TextView>
        </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_alignParentLeft="true"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="30dp"
        android:layout_alignParentLeft="true"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_bookmark"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryDark"/>
</RelativeLayout>
    </LinearLayout>


</LinearLayout>