<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_normal_size">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_normal_size"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/hhhhh"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_toStartOf="@+id/cardImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/cardImg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ابل"
            android:textSize="@dimen/txt_normal_size"
            android:layout_marginTop="@dimen/margin_small_size"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ماك بوك اير بشاشة ريتنا مقاس 3.13 ..ذلك/i3/macos بوصة ومعالج كور"
            android:textSize="@dimen/txt_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000 جنيه سوداني"
            android:textSize="@dimen/txt_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:textColor="@android:color/black"/>

        <Spinner
            android:layout_marginTop="@dimen/margin_normal_size"
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:minWidth="50dp"
            />

    </LinearLayout>

</RelativeLayout>