<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/txt_normal_size"
        android:textStyle="bold"
        android:text="ترتيب بواسطة"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_marginLeft="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="الاولوية"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/darker_gray"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="السعر - الاقل الى الاعلى"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/darker_gray"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="السعر - الاعلى الى الاقل"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/darker_gray"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="الجديد أولا"
            android:textSize="@dimen/txt_normal_size"
            android:textColor="@android:color/darker_gray"/>
    </RadioGroup>

</LinearLayout>