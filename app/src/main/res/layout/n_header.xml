<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layoutDirection="rtl"
    >

    <RelativeLayout
        android:id="@+id/n_header_con1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_test"
            app:civ_border_overlay="true"
            android:layout_margin="@dimen/margin_normal_size"
            />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/profile_image"
            >
            <TextView
                android:textSize="@dimen/txt_small_size"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صباح الخير"
                android:textColor="@android:color/white"
                android:textStyle="bold"

                />
            <TextView
                android:textSize="@dimen/txt_large_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الطيب عمر"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>