<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_normal_size"
        android:gravity="center">
       <RelativeLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="50dp">
           <ImageView
               android:id="@+id/ic_close"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:background="@drawable/close_circle_outline"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ic_close"
            android:id="@+id/whereirecivingfrom"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="تعديل الملف الشخصي"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_large_size"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ic_close" />
       </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="@dimen/margin_small_size"
            android:layout_margin="@dimen/margin_large_size">
            <EditText
                android:id="@+id/edt"
                android:textSize="@dimen/txt_normal_size"
                android:paddingLeft="@dimen/margin_small_size"
                android:paddingRight="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="الطيب عمر"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            app:cardCornerRadius="@dimen/margin_small_size"
            android:layout_margin="@dimen/margin_large_size"
            android:id="@+id/btn"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="موافق"
            android:textSize="@dimen/txt_normal_size"
            android:textStyle="bold"
            android:background="@drawable/shape_btn_bg2"
            />

    </LinearLayout>

</RelativeLayout>